.box {
  width: 400rpx;
  height: 120rpx;
  line-height: 120rpx;
  /*父级给相对定位，伪元素根据父级给绝对定位 */
  position: absolute;
  background-color: #6B62DE;
  border-radius: 16rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 9999;
  text-align: center;
}

.box::after {
  content: '';
  width: 0px;
  height: 0px;
  /* border: 20px solid; */
  border-left: 22rpx solid transparent;
  border-right: 22rpx solid transparent;
  border-bottom: 22rpx solid transparent;
  border-top: 20rpx solid #6B62DE;
  /*给绝对定位，根据需求设置三角形的位置*/
  position: absolute;
  top: 120rpx;
  left: 50%;
  transform: translate(-50%);
}
.box-input {
  width: 700rpx;
  height: 200rpx;
  /*父级给相对定位，伪元素根据父级给绝对定位 */
  position: absolute;
  background-color: #6B62DE;
  border-radius: 16rpx;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 9999;
  box-sizing: border-box;
  padding: 22rpx;
}

.box-input::after {
  content: '';
