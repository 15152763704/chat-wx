/* pages/genImage.wxss */
.p_con{
  background: -webkit-linear-gradient(top,rgb(0, 0, 0),rgb(19, 23, 41),#1e2d72);
  height: calc( 100vh - 200rpx );
  /* padding-left: 40rpx; */
  padding-top: 20rpx;
}

.title_con{
  height: 50rpx;
  display: flex;
  margin-bottom: 40rpx;
  margin-top: 50rpx;
}
.title_item_head{
  display: inline-block;
  width: 6rpx;
  height: 40rpx;
  background-color: rgba(7, 213, 228, 0.842);
  margin-right: 20rpx;
}
.title_item_content{
  font-size: 30rpx;
  color: #eee5e5;
  height: 40rpx;
}
.title_item_check{
  color: red;
  font-size: 50rpx;
  margin-left: 5rpx;
}



.ljkt_btn{
  background-color:rgba(0, 255, 128, 0.938);
  border-radius: 50rpx;
  width: calc( 100vw - 200rpx );
  height: 80rpx;
  line-height: 80rpx;
  font-size: 34rpx;
  font-weight: 500;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}

.chooseInput{
  border: 1rpx solid rgba(18, 228, 217, 0.363);
  width: calc( 100vw - 120rpx );
  height: 200rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  padding: 10rpx 20rpx ;
  color: #ffffff;
}